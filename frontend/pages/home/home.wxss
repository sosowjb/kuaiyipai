.homePage swiper {
    height: 240px;
}

.homePage swiper image {
    width: 100%;
}

.column {
    width: 50%;
    display: inline-block;
    vertical-align: top;
}

.cell {
    border: 1px #bbb solid;
    -moz-box-shadow: 1px 1px 3px #ddd;
    -webkit-box-shadow: 1px 1px 3px #ddd;
    box-shadow: 1px 1px 3px #ddd;
}

.cell.cell-left {
    margin: 5px;
}

.cell.cell-right {
    margin: 5px 5px 5px 0;
}

.cell image {
    width: 99%;
    margin: 1px;
}

.cell .info {
    padding: 0 5px 5px 5px;
}

.cell .info .label {
    font-size: 12px;
    margin-right: 5px;
    padding: 3px;
    border-radius: 3px;
}

.cell .info .label.hot {
    background-color: red;
    color: white;
}

.cell .info .label.deadline {
    background-color: orange;
    color: white;
}

.cell .info .label.secondhand {
    background-color: lightskyblue;
    color: white;
}

.cell .info .title {
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 5px;
}

.cell .info .bids {
    font-size: 12px;
    color: grey;
    padding-top: 5px;
}

.cell .info .price {
    color: red;
    font-weight: bold;
    text-align: right;
}
