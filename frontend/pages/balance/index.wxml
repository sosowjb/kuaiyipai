<view style="height:20rpx;background: #eee;width:100%;"></view> 
<view class="top-info flex-row">
  <view class="flex-grow-1 flex-x-center flex-row">
      <view class="flex-grow-0" style='margin-top:40rpx;'>
          <text class="money" style='font-size: 60rpx;'>{{balance}}</text>
          <text class="money">\n冻结金额：{{freeze}}</text>
      </view>
  </view>
  <view class="flex-grow-0 flex-y-center">
      <navigator class="flex-y-center" url="/pages/my/setting">
          <text>余额明细</text>
          <image src="/images/icon-jiantou-r.png"/>        
      </navigator>
  </view>
</view>
<view style="height:20rpx;background: #eee;width:100%;"></view>  
<view class="order-block">
  <view class="flex-row">
      <view class="flex-grow-1">
          <navigator class="nav-item" url="/pages/order/order?status=0">
              <view>待付款</view>
              <view class='money'>
                  {{obligation}}
              </view>
          </navigator>
      </view>
      <view class="flex-grow-1">
          <navigator class="nav-item" url="/pages/order/order?status=1">
              <view>待发货</view>
              <view class='money'>
                  {{waitsend}}
              </view>
          </navigator>
      </view>
      <view class="flex-grow-1">
          <navigator class="nav-item" url="/pages/order/order?status=2">
              <view>待收货</view>
              <view class='money'>
                  {{waitget}}
              </view>
          </navigator>
      </view>
  </view>
</view>
<view style="height:20rpx;background: #eee;width:100%;"></view>
<view class="option-list">
    <navigator class="option-item">
        <view class="flex-row option-content">
            <view class="flex-grow-1 flex-row">
                <view class="flex-grow-0 flex-y-center">
                    <image class="option-icon" src="/images/icon_wallet.png"/>
                </view>
                <view class="flex-grow-1 flex-y-center">
                    充值
                </view>
            </view>
            <view class="flex-grow-0 flex-y-center">
                <image class="option-jisntou" src="/images/icon-jiantou-r.png"/>
            </view>
        </view>
    </navigator>
    <navigator class="option-item" url="/pages/favorite/favorite">
        <view class="flex-row option-content">
            <view class="flex-grow-1 flex-row">
                <view class="flex-grow-0 flex-y-center">
                    <image class="option-icon" src="/images/icon-dollar.png"/>
                </view>
                <view class="flex-grow-1 flex-y-center">
                    提现
                </view>
            </view>
            <view class="flex-grow-0 flex-y-center">
                <image class="option-jisntou" src="/images/icon-jiantou-r.png"/>
            </view>
        </view>
    </navigator>
</view>
