.flex {
    display: flex;
}
.flex-row {
    display: flex;
    flex-direction: row;
}
.flex-col{
    display: flex;
    flex-direction: column;
}
.flex-grow-0{
    flex-grow: 0;
}
.flex-grow-1{
    flex-grow: 1;
}
.flex-grow-2{
    flex-grow: 2;
}
.flex-x-center{
    display: flex;
    justify-content: center;
}
.flex-y-center{
    display: flex;
    align-items: center;
}
.user-info{
    height: 268rpx;
    color: #fff;
    position: relative;
}
.user-info .user-info-bg{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}
.user-info .avatar{
    width: 130rpx;
    height: 130rpx;
    border-radius: 99999rpx;
    border: 5rpx solid #fff;
    margin: 0 24rpx;
}
.user-info .user-name{
    font-weight: bold;
}
.user-info .my-address{
    background: #ff4544;
    color: #fff;
    border-radius: 999rpx 0 0 999rpx;
    padding-right: 24rpx;
}
.user-info .my-address image{
    width: 44rpx;
    height: 44rpx;
    margin: 16rpx;
}
.order-block{
    background: #fff;
    margin-bottom: 20rpx;
}
.order-block .my-order{
    display: block;
    border-bottom: 1rpx solid #e3e3e3;
    padding: 24rpx;
}
.order-block .nav-item{
    text-align: center;
    display: block;
    font-size: 9pt;
    padding: 24rpx 0;
    position: relative;
}
.icoFontSize15{
  font-size: 25px !important;
}
.fs15p{
  font-size:15px;
}
.order-block .nav-item .num-icon{
    position: absolute;
    top: 23rpx;
    left: 45%;
    margin-left: 12rpx;
    display: inline-block;
    background: #f00;
    color: #fff;
    border-radius: 999rpx;
    padding: 1 8rpx;
    min-width: 40rpx;
    font-size: 10pt;
}
.order-block .nav-item image{
    width: 60rpx;
    height: 57rpx;
    margin-bottom: 5rpx;
}
.my-item{
    width: 100%;
    background-size: 16rpx auto,750rpx auto;
    margin: 15rpx 0; 
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 40rpx;
    background:none;
}
.option-list{
    margin-bottom: 20rpx;
}
.option-item{
    background: #fff;
    padding:0 24rpx;
    display: block;
    position: relative;
}
.option-item .option-content{
    border-bottom: 1rpx solid #eee;
    height: 110rpx;
}

.option-item .option-icon{
    width: 50rpx;
   /* height: 50rpx;*/
    margin-right: 24rpx;
}
.option-item .option-jisntou{
    width: 12rpx;
    height: 22rpx;
}
.address-add{position: fixed;bottom:0;width: 100%;}
.address-list {margin-bottom: 46px;}
.btn{
  display: block;
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 6rpx;
    box-sizing: border-box;
    margin:0 auto;
}
.btn-view-cell{
  padding:10px 15px;
display:-webkit-box;
display:-webkit-flex;
display:flex;
-webkit-box-align:center;
-webkit-align-items:center;
align-items:center;

}